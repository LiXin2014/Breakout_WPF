<Window x:Class="Breakout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Breakout"
        mc:Ignorable="d"
        Title="Break Out Game" Height="500" Width="750"
        ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="5" Grid.Column="0">
            <Canvas x:Name="GameArea" Grid.Column="0" Background="LightGray">

            </Canvas>
        </Border>
        <StackPanel Grid.Column="1" Margin="50">
            <Button Content="Start Game" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Window>
